#!/bin/sh

lock_str="ğŸ”’ lock"
hibernate_str="ğŸ» hibernate"
display_off_str="ğŸ“º display off"
reboot_str="ğŸ”ƒ reboot"
shutdown_str="ğŸšª shutdown"

case "$(printf "$lock_str\n$hibernate_str\n$display_off_str\n$reboot_str\n$shutdown_str" | dmenu -i -p 'Action: ')" in
	"$lock_str") slock ;;
	"$hibernate_str") slock loginctl hibernate -i ;;
	"$display_off_str") xset dpms force off ;;
	"$reboot_str") loginctl reboot -i ;;
	"$shutdown_str") loginctl poweroff -i ;;
	*) exit 1 ;;
esac
