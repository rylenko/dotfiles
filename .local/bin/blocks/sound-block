#!/bin/sh

is_muted=$(pacmd list-sinks | awk '/muted/ { print $2 }')

if [ "$is_muted" = "yes" ]; then
	echo "ðŸ”‡muted"
else
	level=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po '\d+(?=%)' | head -n 1)

	if [ "$level" -eq "0" ]; then
		emoji="ðŸ”‡"
	elif [ "$level" -le "33" ]; then
		emoji="ðŸ”ˆ"
	elif [ "$level" -le "66" ]; then
		emoji="ðŸ”‰"
	else
		emoji="ðŸ”Š"
	fi

	echo "$emoji$level%"
fi

